---
import Layout from "@/layouts/Layout.astro";
import TopBar from "@/components/TopBar.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { SITE } from "@/config";
import { getAllProducts, isInStock } from "@/lib/products";

const products = getAllProducts();
---

<Layout title={`Store | ${SITE.title}`}>
  <TopBar />
  <Header />
  <main id="main-content" class="mx-auto max-w-app px-4">
    <section class="my-8">
      <h1 class="text-4xl font-bold text-foreground mb-4">Built Primal Store</h1>
      <p class="text-lg text-muted-foreground mb-8">
        Premium tools and resources for mindful training and primal movement.
      </p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {products.map((product) => (
          <div class="bg-background border border-border rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow">
            <a href={`/store/${product.slug}`} class="block">
              <div class="aspect-video bg-muted flex items-center justify-center">
                {product.image ? (
                  <img 
                    src={product.image} 
                    alt={product.title}
                    class="w-full h-full object-cover"
                    loading="lazy"
                  />
                ) : (
                  <div class="text-muted-foreground text-sm">Product Image</div>
                )}
              </div>
            </a>
            <div class="p-6">
              <h2 class="text-xl font-semibold text-foreground mb-2">{product.title}</h2>
              <p class="text-muted-foreground mb-4">{product.summary}</p>
              <div class="flex items-center justify-between">
                <div>
                  <span class="text-2xl font-bold text-accent">${product.price}</span>
                  {!isInStock(product) && (
                    <span class="text-sm text-muted-foreground ml-2">Out of Stock</span>
                  )}
                </div>
                <a 
                  href={`/store/${product.slug}`}
                  class="text-accent text-sm font-medium hover:underline"
                >
                  View Details â†’
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>
  </main>
  <Footer />
</Layout> 